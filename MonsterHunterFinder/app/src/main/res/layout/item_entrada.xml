<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/holo_orange_dark">

    <View
        android:id="@+id/vistaInterna"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@color/material_dynamic_neutral20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoListaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textColor="@color/material_dynamic_neutral_variant70"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textoListaArma"
        app:layout_constraintTop_toBottomOf="@+id/textoListaArma"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/botonVer"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/system_neutral1_900"
        android:text="@string/ver"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="@+id/botonEliminar"
        app:layout_constraintEnd_toStartOf="@+id/botonEditar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/vistaInterna"
        app:layout_constraintTop_toTopOf="@+id/botonEliminar" />

    <TextView
        android:id="@+id/textoListaArma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="21dp"
        android:text="TextView"
        android:textColor="@color/material_dynamic_neutral_variant70"
        app:layout_constraintBottom_toBottomOf="@+id/vistaInterna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/botonEditar"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/system_neutral1_900"
        android:text="@string/editar"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="@+id/botonEliminar"
        app:layout_constraintEnd_toStartOf="@+id/botonEliminar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/vistaInterna"
        app:layout_constraintTop_toTopOf="@+id/botonEliminar" />

    <Button
        android:id="@+id/botonEliminar"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:backgroundTint="@android:color/system_neutral1_900"
        android:text="@string/eliminar"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/vistaInterna"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/vistaInterna"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>