<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/holo_orange_dark">

    <View
        android:id="@+id/vistaInterna1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"

        android:background="@color/material_dynamic_neutral20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vistaInterna2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="60dp"
        android:background="@color/material_dynamic_neutral20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/vistaInterna3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:background="@color/material_dynamic_neutral20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoNombreCazador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textColor="@color/material_dynamic_neutral_variant70"
        app:layout_constraintBottom_toBottomOf="@+id/vistaInterna1"
        app:layout_constraintEnd_toEndOf="@+id/vistaInterna3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/vistaInterna1"
        app:layout_constraintTop_toTopOf="@+id/vistaInterna1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textoBioCazador"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="7dp"
        android:text="TextView"
        android:textColor="@color/material_dynamic_neutral_variant70"
        app:layout_constraintBottom_toBottomOf="@+id/vistaInterna1"
        app:layout_constraintEnd_toEndOf="@+id/vistaInterna1"
        app:layout_constraintStart_toStartOf="@+id/textoNombreCazador"
        app:layout_constraintTop_toBottomOf="@+id/textoNombreCazador"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>