<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral20"
    tools:context=".activity_perfil_anadir">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cajaEnlaceFoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="350dp"
        android:hint="@string/enlaceFoto"
        android:textColorHint="@color/material_dynamic_neutral70"
        app:boxStrokeColor="@android:color/holo_orange_dark"
        app:boxStrokeWidth="2dp"
        app:hintTextColor="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:hintTextColor="@color/material_dynamic_neutral60">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textoEnlaceFoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/material_dynamic_neutral70" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/botonHacerFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@android:color/system_neutral1_900"
        app:icon="@drawable/baseline_photo_camera_24"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        app:iconTint="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="@+id/botonGaleriaFoto"
        app:layout_constraintEnd_toStartOf="@+id/botonGaleriaFoto"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/botonGaleriaFoto" />

    <Button
        android:id="@+id/botonGaleriaFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:backgroundTint="@android:color/system_neutral1_900"
        app:icon="@drawable/baseline_upload_24"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        app:iconTint="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textoVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/videoAnadir"
        android:textColor="@color/material_dynamic_neutral70"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cajaEnlaceFoto"
        app:layout_constraintVertical_bias="0.0" />


    <VideoView
        android:id="@+id/videoViewAnadir"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoVideo"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonPlayAnadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="@android:color/system_neutral1_900"
        app:layout_constraintBottom_toBottomOf="@+id/botonPauseAnadir"
        app:layout_constraintEnd_toStartOf="@+id/botonPauseAnadir"
        app:layout_constraintTop_toTopOf="@+id/botonPauseAnadir"
        app:srcCompat="@drawable/baseline_play_arrow_24"
        app:tint="@color/mtrl_textinput_default_box_stroke_color" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonPauseAnadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="@android:color/system_neutral1_900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/videoViewAnadir"
        app:layout_constraintTop_toTopOf="@+id/videoViewAnadir"
        app:layout_constraintVertical_bias="0.37"
        app:srcCompat="@drawable/baseline_pause_24"
        app:tint="@color/mtrl_textinput_default_box_stroke_color" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonStopAnadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="@android:color/system_neutral1_900"
        app:layout_constraintBottom_toBottomOf="@+id/botonPauseAnadir"
        app:layout_constraintStart_toEndOf="@+id/botonPauseAnadir"
        app:layout_constraintTop_toTopOf="@+id/botonPauseAnadir"
        app:srcCompat="@drawable/baseline_stop_24"
        app:tint="@color/mtrl_textinput_default_box_stroke_color" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonRetrAnadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="@android:color/system_neutral1_900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/botonPlayAnadir"
        app:layout_constraintStart_toStartOf="@+id/botonPlayAnadir"
        app:layout_constraintTop_toBottomOf="@+id/botonPlayAnadir"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@android:drawable/ic_media_rew"
        app:tint="@color/mtrl_textinput_default_box_stroke_color" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonAvanAnadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="@android:color/system_neutral1_900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/botonStopAnadir"
        app:layout_constraintStart_toStartOf="@+id/botonStopAnadir"
        app:layout_constraintTop_toBottomOf="@+id/botonPauseAnadir"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@android:drawable/ic_media_ff"
        app:tint="@color/mtrl_textinput_default_box_stroke_color" />

    <Button
        android:id="@+id/botonGrabarVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@android:color/system_neutral1_900"
        app:icon="@drawable/baseline_camera_24"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        app:iconTint="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="@+id/botonGaleriaVideo"
        app:layout_constraintEnd_toStartOf="@+id/botonGaleriaVideo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/botonGaleriaVideo" />

    <Button
        android:id="@+id/botonGaleriaVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="@android:color/system_neutral1_900"
        app:icon="@drawable/baseline_upload_24"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        app:iconTint="@color/mtrl_textinput_default_box_stroke_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/videoViewAnadir"
        app:layout_constraintTop_toTopOf="@+id/videoViewAnadir"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/botonConfirmarAnadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="@android:color/system_neutral1_900"
        android:text="@string/confirmar"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botonVolverAnadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="@android:color/system_neutral1_900"
        android:onClick="volver"
        android:text="@string/botonVolver"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:onClick="volver" />

</androidx.constraintlayout.widget.ConstraintLayout>