<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral20"
    tools:context=".activity_audio">

    <ImageView
        android:id="@+id/headerPerfilVideo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/wallpaper_deviljho" />

    <ImageView
        android:id="@+id/iconPerfilVideo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/headerPerfilVideo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/headerPerfilVideo"
        app:layout_constraintTop_toTopOf="@+id/headerPerfilVideo"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/icon" />

    <Button
        android:id="@+id/botonVolverVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@android:color/system_neutral1_900"
        android:onClick="volver"
        android:text="@string/botonVolver"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/headerPerfilVideo"
        app:layout_constraintVertical_bias="1.0"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="252dp"
        android:layout_height="19dp"
        android:progressTint="@color/mtrl_textinput_default_box_stroke_color"
        android:thumbTint="@color/mtrl_textinput_default_box_stroke_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerPerfilVideo"
        app:layout_constraintVertical_bias="0.23" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="@android:color/system_neutral1_900"
        app:srcCompat="@drawable/baseline_play_arrow_24"
        app:tint="@color/mtrl_textinput_default_box_stroke_color"
        app:layout_constraintBottom_toBottomOf="@+id/botonPause"
        app:layout_constraintEnd_toStartOf="@+id/botonPause"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/botonPause"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="@android:color/system_neutral1_900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_pause_24"
        app:tint="@color/mtrl_textinput_default_box_stroke_color" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="@android:color/system_neutral1_900"
        app:layout_constraintBottom_toBottomOf="@+id/botonPause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botonPause"
        app:layout_constraintTop_toTopOf="@+id/botonPause"
        app:srcCompat="@drawable/baseline_stop_24"
        app:tint="@color/mtrl_textinput_default_box_stroke_color"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonRetr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="@android:color/system_neutral1_900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/botonPlay"
        app:layout_constraintStart_toStartOf="@+id/botonPlay"
        app:layout_constraintTop_toBottomOf="@+id/botonPlay"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@android:drawable/ic_media_rew"
        app:tint="@color/mtrl_textinput_default_box_stroke_color" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonAvan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="@android:color/system_neutral1_900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/botonStop"
        app:layout_constraintStart_toStartOf="@+id/botonStop"
        app:layout_constraintTop_toBottomOf="@+id/botonPause"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@android:drawable/ic_media_ff"
        app:tint="@color/mtrl_textinput_default_box_stroke_color" />


</androidx.constraintlayout.widget.ConstraintLayout>